{
	"name": "api",
	"private": true,
	"scripts": {
		"dev": "bun --watch server.ts",
		"lint": "biome lint",
		"fmt": "biome format --write",
		"test": "bun test --preload ./tests/setup.ts",
		"build:api": "bun build --minify --target=node --outfile=./dist/api.js ./app/index.ts",
		"db:push": "drizzle-kit push",
		"db:push:test": "bun --env-file=.env.test run db:push",
		"db:studio": "drizzle-kit studio",
		"auth:gen": "bunx @better-auth/cli generate --config ./services/auth.ts --output ./database/schema/auth.ts",
		"type": "tsgo"
	},
	"dependencies": {
		"@elysiajs/cors": "^1.4.1",
		"@elysiajs/eden": "^1.4.8",
		"@elysiajs/node": "^1.4.5",
		"@elysiajs/openapi": "^1.4.14",
		"@paralleldrive/cuid2": "^3.3.0",
		"@sinclair/typemap": "^0.10.1",
		"better-auth": "^1.4.19",
		"date-fns": "^4.1.0",
		"dotenv": "^17.3.1",
		"drizzle-orm": "^0.45.1",
		"elysia": "^1.4.26",
		"pg": "^8.18.0",
		"pino": "^10.3.1",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@faker-js/faker": "^10.3.0",
		"@types/bun": "^1.3.9",
		"@types/pg": "^8.16.0",
		"@typescript/native-preview": "^7.0.0-dev.20260225.1",
		"drizzle-kit": "^0.31.9",
		"pino-pretty": "^13.1.3",
		"typescript": "^5.9.3"
	}
}
